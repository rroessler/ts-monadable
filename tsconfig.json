{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "moduleResolution": "node",
        "lib": ["ES2015"],

        "allowJs": false,
        "strict": true,
        "strictNullChecks": true,

        "noImplicitAny": true,
        "noImplicitUseStrict": false,

        "rootDir": "lib",
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "typings"
    }
}
